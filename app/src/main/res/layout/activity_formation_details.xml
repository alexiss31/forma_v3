<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Titre de la page -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Détails de la formation"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <!-- Card contenant les informations -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#CCFFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Libellé -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Libellé"
                    android:textSize="14sp"
                    android:textColor="#9C27B0"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/textViewLibelleDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Libellé"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="16dp" />

                <!-- Section Objectifs -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Objectifs"
                    android:textSize="14sp"
                    android:textColor="#9C27B0"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/textViewObjectifsDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Objectifs"
                    android:textColor="#212121"
                    android:layout_marginBottom="16dp" />

                <!-- Section Dates -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dates"
                    android:textSize="14sp"
                    android:textColor="#9C27B0"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/textViewDateDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dates"
                    android:textColor="#212121"
                    android:layout_marginBottom="16dp" />

                <!-- Section Salle -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salle"
                    android:textSize="14sp"
                    android:textColor="#9C27B0"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/textViewSalleDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salle"
                    android:textColor="#212121"
                    android:layout_marginBottom="16dp" />

                <!-- Section Public visé -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Public visé"
                    android:textSize="14sp"
                    android:textColor="#9C27B0"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/textViewPublicDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Public visé"
                    android:textColor="#212121"
                    android:layout_marginBottom="16dp" />

                <!-- Section Intervenants -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Intervenants"
                    android:textSize="14sp"
                    android:textColor="#9C27B0"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/textViewIntervenantsDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Intervenants"
                    android:textColor="#212121" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Boutons d'action -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonRetour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/black"
            android:paddingVertical="12dp"
            android:text="Retour"
            android:textColor="#FFFFFF"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_revert"
            app:iconGravity="textStart"
            app:iconTint="#FFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDeconnexion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Se déconnecter"
            android:textColor="#FFFFFF"
            app:cornerRadius="8dp"
            android:backgroundTint="#D81B60"
            android:paddingVertical="12dp"
            app:icon="@android:drawable/ic_lock_power_off"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart" />
    </LinearLayout>
</ScrollView>